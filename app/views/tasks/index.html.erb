<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title ,task %></td>
        <td>|</td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当によろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>

<br>

<h1>タスク登録</h1>
<%= render 'form', task: @task %>
