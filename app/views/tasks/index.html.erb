<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <%= @task.title %>
      <%= @task.body %>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title ,task %></td>
        <td>|</td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当によろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>

<br>

<%= render 'form', task: @task %>
