<%= form_with(model: task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <p><b>【エラー内容】</b></p>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  
  <div class="field">
    <%= form.label :タイトル%>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :内容 %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
